		{
			"name": "Create a List",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"const randomNumber = (size) => {\r",
							"    let minm = [\"1\"];\r",
							"    for(let index = 0; index < size - 1; index++) {\r",
							"        minm.push(\"0\");\r",
							"    }\r",
							"    minm = parseInt(minm.join(\"\"));\r",
							"\r",
							"    let maxm = [\"9\"]\r",
							"    for(let index = 0; index < size - 1; index++) {\r",
							"        maxm.push(\"9\");\r",
							"    }\r",
							"    maxm = parseInt(maxm.join(\"\"));\r",
							"    return Math.floor(Math\r",
							"    .random() * (maxm - minm + 1)) + minm;\r",
							"}\r",
							"\r",
							"const setTheListNames = () => {\r",
							"    \r",
							"    let theListNames;\r",
							"    const aListName = `List ${randomNumber(6)}`;\r",
							"    if(pm.environment.has(\"theListNames\")){\r",
							"        theListNames = JSON.parse(pm.environment.get(\"theListNames\"));\r",
							"        theListNames.push(aListName);\r",
							"\r",
							"    } else {\r",
							"        theListNames = [aListName];\r",
							"    }\r",
							"    pm.environment.set(\"theListNames\", JSON.stringify(theListNames));\r",
							"    pm.environment.set(\"aListName\", aListName);\r",
							"}\r",
							"\r",
							"setTheListNames();\r",
							"\r",
							""
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"const jsonData = pm.response.json();\r",
							"\r",
							"pm.test(\"Created List successfully\", ()=>{\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"\r",
							"//we want to create two lists, so check the number already in the environment and call\r",
							"// again if only one.\r",
							"if(!pm.environment.has(\"theListIds\") ){\r",
							"    console.log(\"we should be here.\");\r",
							"    postman.setNextRequest(\"Create a List\");\r",
							"}\r",
							"\r",
							"const setTheListsIds = (id) => {\r",
							"    let theListIds;\r",
							"    if(pm.environment.has(\"theListIds\")){\r",
							"        theListIds = JSON.parse(pm.environment.get(\"theListIds\"));\r",
							"        theListIds.push(id);\r",
							"    } else {\r",
							"        theListIds = [id];\r",
							"    }\r",
							"    pm.environment.set(\"theListIds\", JSON.stringify(theListIds));\r",
							"}\r",
							"\r",
							"pm.test(\"Confirm list content expected\", () => {\r",
							"    pm.expect(jsonData).to.be.an(\"object\");\r",
							"    pm.expect(jsonData).haveOwnProperty(\"id\");\r",
							"    pm.expect(jsonData).haveOwnProperty(\"name\");\r",
							"    pm.expect(jsonData.idBoard).to.be.eql(pm.environment.get(\"aBoardId\"));\r",
							"});\r",
							"\r",
							"setTheListsIds(jsonData.id);"
						],
						"type": "text/javascript"
					}
				}
			],
